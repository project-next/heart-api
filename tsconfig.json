{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"sourceMap": true,
		"allowJs": false,
		"checkJs": false,
		"moduleResolution": "node",
		"rootDir": "./",
		"noImplicitReturns": true,
		"skipLibCheck": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"noEmit": true, // true will prevent output from being generated
		"allowImportingTsExtensions": true, // importing local code with .ts instead of .js is allowed

		"strict": true,
		//  turn on below configs individually to override strict true
		//  "noImplicitAny": true,
		//  "noImplicitThis": true,
		//  "alwaysStrict": true,
		//  "strictBindCallApply": true,
		//  "strictNullChecks": true,
		"strictFunctionTypes": false,
		//  "strictPropertyInitialization": true,

		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		// "isolatedModules": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,

		"outDir": "dist",
		"baseUrl": "./"
	},
	"include": ["src/**/*", "unit-test/**/*"],
	"exclude": ["node_modules", ".vscode"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
		"transpileOnly": false // set to true if there are ts typing issues to temporarily debug
		// "compilerOptions": {
		// 	// should be enabled when this PR is live https://github.com/TypeStrong/ts-node/pull/1585
		// 	"paths": {
		// 		"src/*": ["./src/*"]
		// 	}
		// }
	}
}
