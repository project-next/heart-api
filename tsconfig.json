{
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,

		"alwaysStrict": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,

		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}