{
	"extends": [
		"config:base"
	],
	"assigneesFromCodeOwners": true,
	"automergeStrategy": "squash",
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch",
				"pin",
				"digest"
			],
			"automerge": true
		},
		{
			"matchDepTypes": [
				"devDependencies"
			],
			"automerge": true
		}
	]
}