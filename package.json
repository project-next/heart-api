{
  "name": "heart-api",
  "version": "1.1.0",
  "description": "API that can be used to retrieve various data that is found in a variety of places. An ideal use case is to retrieve social media information for specific services.",
  "main": "./src/app.ts",
  "scripts": {
	 "mocha-r": "nyc mocha --require mocha-suppress-logs --exit -r ts-node/register 'unit-test/**/*.ts'",
	 "mocha-d": "nyc mocha --timeout 3000 --exit --require ts-node/register 'unit-test/**/*.ts'",
    "unit-test": "env-cmd -e test env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\", \"alwaysStrict\": true }' npm run mocha-r",
    "integration-test": "env-cmd -e test cucumber-js",
    "dev": "env-cmd -e default nodemon ./src/app.ts",
    "build": "rm -rf dist && tsc && cp ./package.json ./dist && cp ./.env-cmdrc.json ./dist && cp -r ./certs ./dist",
    "upload-production": "npm run build && bash artifact-transfer.sh 'ec2-3-20-117-123.us-east-2.compute.amazonaws.com'",
    "restage-production": "bash docker-restage.sh 'ec2-3-20-117-123.us-east-2.compute.amazonaws.com'",
    "deploy-production": "npm run upload-production && npm run restage-production",
    "local-start": "npm run build && cd ./dist && env-cmd -e default node ./app.js",
    "docker-start": "env-cmd -e default node ./app.js"
  },
  "keywords": [
    "heart",
    "api"
  ],
  "author": "Javi Gomez",
  "license": "ISC",
  "dependencies": {
    "axios": "0.21.1",
    "cors": "2.8.5",
    "express": "4.17.1",
    "fs": "0.0.1-security",
    "http": "0.0.1-security",
    "https": "1.0.0",
    "lodash.sample": "4.2.1",
    "logger": "0.0.1",
    "moize": "6.0.3",
    "morgan": "1.10.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "7.3.1",
    "@types/chai": "4.2.21",
    "@types/chai-http": "4.2.0",
    "@types/cors": "2.8.12",
    "@types/cucumber": "7.0.0",
    "@types/express": "4.17.13",
    "@types/lodash.sample": "4.2.6",
    "@types/mocha": "9.0.0",
    "@types/morgan": "1.9.3",
    "@types/node": "15.6.1",
    "@types/rewire": "2.5.28",
    "@types/sinon": "10.0.2",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "mocha": "9.0.3",
    "mocha-suppress-logs": "0.3.1",
    "nodemon": "2.0.12",
    "nyc": "15.1.0",
    "pactum": "3.0.17",
    "rewire": "5.0.0",
    "sinon": "11.1.2",
    "ts-node": "10.1.0",
    "tslint": "6.1.3",
    "typescript": "4.3.5"
  }
}
