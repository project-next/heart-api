{
	"name": "heart-api",
	"version": "1.4.1",
	"description": "API that can be used to retrieve various data that is found in a variety of places. An ideal use case is to retrieve social media information for specific services.",
	"main": "./src/app.ts",
	"type": "module",
	"scripts": {
		"preinstall": "npx force-resolutions",
		"postinstall": "npm dedupe",
		"fresh-install": "rm -rf node_modules package-lock.json && npm install",
		"run-mocha-tests": "c8 -c './config/.nycrc.json' mocha --config './config/mocharc.json' 'unit-test/**/*.ts'",
		"test": "env-cmd -e test npm run run-mocha-tests",
		"mutation": "NODE_OPTIONS='--loader ts-node/esm' env-cmd -e test stryker run config/stryker.conf.json",
		"integration-test": "source integration-test/jwt.sh && NODE_OPTIONS='--loader ts-node/esm' env-cmd -e test cucumber-js --config config/cucumber.mjs",
		"local:integration-test": "export HEART_API_HOST='http://localhost:80' && npm run integration-test",
		"remote:integration-test": "export HEART_API_HOST='https://heart-api.com' && npm run integration-test",
		"start": "env-cmd -e dev nodemon --ext ts --exec ts-node ./src/app.ts",
		"start-prod": "env-cmd -e prod nodemon --ext ts --exec ts-node ./src/app.ts",
		"build": "rm -rf dist && tsc && cp ./package.json ./dist && cp ./.env-cmdrc.json ./dist && cp -r ./certs ./dist && cp ./tsconfig.json ./dist",
		"upload-production": "npm run build && bash artifact-transfer.sh 'ec2-3-20-117-123.us-east-2.compute.amazonaws.com'",
		"restage-production": "bash docker-restage.sh 'ec2-3-20-117-123.us-east-2.compute.amazonaws.com'",
		"deploy-production": "npm run upload-production && npm run restage-production",
		"start-built-api": "env-cmd -e prod node -r ts-node/register ./src/app.js",
		"local-start": "npm run build && cd ./dist && npm run start-built-api",
		"docker-start": "npm run start-built-api",
		"doppler:setup-env": "bash doppler-secrets-local-setup.sh prod",
		"doppler:update-env": "bash doppler-update-secrets.sh prod",
		"gh:test": "echo $HEART_API_TEST_ENV > .env-cmdrc.json && bash doppler-secrets-gh-setup.sh && sudo npm test",
		"lint": "eslint src --ext .ts"
	},
	"keywords": [
		"heart",
		"api"
	],
	"author": "Javi Gomez",
	"license": "ISC",
	"dependencies": {
		"axios": "1.5.1",
		"compression": "1.7.4",
		"cors": "2.8.5",
		"express": "4.18.2",
		"fs": "0.0.2",
		"http": "0.0.1-security",
		"https": "1.0.0",
		"jsonwebtoken": "9.0.2",
		"lodash.sample": "4.2.1",
		"lodash.uniq": "^4.2.0",
		"logger": "0.0.1",
		"moize": "^6.1.5",
		"mongoose": "7.6.3",
		"morgan": "1.10.0"
	},
	"devDependencies": {
		"@cucumber/cucumber": "10.0.0",
		"@stryker-mutator/core": "7.3.0",
		"@stryker-mutator/mocha-runner": "7.3.0",
		"@stryker-mutator/typescript-checker": "7.3.0",
		"@types/chai": "4.3.9",
		"@types/compression": "1.7.4",
		"@types/cors": "2.8.15",
		"@types/express": "4.17.20",
		"@types/jsonwebtoken": "9.0.4",
		"@types/lodash.sample": "4.2.8",
		"@types/lodash.uniq": "4.5.8",
		"@types/mocha": "10.0.2",
		"@types/morgan": "1.9.6",
		"@types/node": "18.18.5",
		"@types/sinon": "10.0.20",
		"@types/supertest": "2.0.14",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"c8": "8.0.1",
		"chai": "4.3.10",
		"chai-http": "4.4.0",
		"env-cmd": "^10.1.0",
		"eslint": "^8.37.0",
		"mocha": "10.2.0",
		"mocha-suppress-logs": "0.3.1",
		"nodemon": "3.0.1",
		"pactum": "3.5.1",
		"sinon": "16.1.0",
		"supertest": "6.3.3",
		"ts-node": "10.9.1",
		"typescript": "5.2.2"
	}
}
